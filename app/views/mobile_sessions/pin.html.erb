<%= form_with(url: ipad_pin_url, method: "post", class: "mt-3") do %>
  <%= hidden_field_tag :employee_number, @employee_number %>
  <p class="lead text-center">Enter pin for <strong><%= @user.name %></strong> and press "enter":</p>
  <div class="row">
    <div class="col-6 offset-3">
      <div class="row">
        <div class="col-12">
          <%= content_tag(:div, class: "form-group") do %>
            <%= password_field_tag(:pin, "", class: ["form-control", "form-control-lg", "text-center"], readonly: true, maxlength: "4") %>
          <% end %>
        </div>
        <%= render partial: "keypad" %>
        <div class="col-12 mt-3 text-center">
          <%= link_to("<i class=\"fas fa-angle-double-left\"></i> Back".html_safe, ipad_logout_url, method: :post, class: ["btn", "btn-secondary", "btn-lg"]) %>
          <%= link_to("<i class=\"fas fa-clock\"></i> Clocked in Right Now".html_safe, ipad_now_url, class: ["btn", "btn-primary", "btn-lg"]) %>
        </div>
      </div>
    </div>
  </div>
<% end %>