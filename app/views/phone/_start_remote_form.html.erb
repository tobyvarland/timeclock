<%= form_with(model: punch, remote: true, class: "my-3") do |form| %>
  <%= hidden_field_tag 'source', 'phone' %>
  <%= form.hidden_field :user_id %>
  <%= form.hidden_field :punch_at %>
  <%= form.hidden_field :punch_type, value: "remote_start" %>
  <button class="btn btn-success btn-block btn-lg"><i class="fas fa-wrench"></i> Start Remote Work</button>
<% end %>